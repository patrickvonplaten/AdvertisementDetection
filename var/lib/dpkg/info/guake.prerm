#!/bin/sh
set -e

case "$1" in
	remove|deconfigure)
		gconf-schemas --unregister guake.schemas
		update-alternatives --remove guake /usr/bin/guake || true
                update-alternatives --remove x-terminal-emulator /usr/bin/guake
		;;
	

       upgrade|purge)

        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
esac


# Automatically added by dhpython:
if which pyclean >/dev/null 2>&1; then
	pyclean -p guake 
else
	dpkg -L guake | grep \.py$ | while read file
	do
		rm -f "${file}"[co] >/dev/null
  	done
fi

