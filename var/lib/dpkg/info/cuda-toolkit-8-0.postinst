#! /bin/sh

set -e

case "$1" in
    configure)
        if [ -h /usr/local/cuda ]; then
            rm -f /usr/local/cuda
        fi
        if [ ! -e /usr/local/cuda ]; then
            ln -s cuda-8.0 /usr/local/cuda
        else
            cat <<EOM
WARNING: /usr/local/cuda already exists. Not creating symlink from
/usr/local/cuda to cuda-8.0.
EOM
        fi
        ;;
esac



exit 0
