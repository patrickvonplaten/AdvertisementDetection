set -e

PACKAGE_NAME=libhybris

case "$1" in
	remove)
		update-alternatives --remove x86_64-linux-gnu_egl_conf /usr/lib/x86_64-linux-gnu/libhybris-egl/ld.so.conf

		# explicit ldconfig due to alternatives
		LDCONFIG_NOTRIGGER=y ldconfig
	;;
esac


